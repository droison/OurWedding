<!--pages/invitation/index.wxml-->
<view class="container">
  <view class="savethedate">
    <image src="/images/save_the_date_pu.gif" width="100%"/>
  </view>
  <view class="name">
    <span class="fl">{{mainInfo.he}}</span>
    <span class="fr">{{mainInfo.she}}</span>  
  </view>
  <view class="diamond">
    <image src="/images/diamond-divider.png" width="100%"/>
  </view>
  <view class="date">
    <view>兹定于 {{mainInfo.date}}</view>
    <view>农历 {{mainInfo.lunar}}</view>
    <view>举办婚礼</view>
  </view>
  <view class='detail'>
    <view class="s_icon"><image src="/images/hotel.png"/></view>
    <view class="address">{{mainInfo.hotel}}</view>
    <navigator url="/pages/map/index" open-type="switchTab" hover-class="other-navigator-hover">
      <view class="s_icon"><image src="/images/address.png"/></view>
    </navigator>
  </view>
  <view class="words">
    <image src="/images/words.png" width="100%"/>
  </view>
  <view class="tel">
    <view class="tel_he" wx:if="{{mainInfo.he_tel}}">
      <view class="call" bindtap="callhe"><image src="/images/he.jpg" width="100%"/></view> 
      呼叫新郎
    </view>
    <view class="tel_she" wx:if="{{mainInfo.she_tel}}">
      <view class="call" bindtap="callshe"><image src="/images/she.jpg" width="100%"/></view>
      呼叫新娘
    </view>
  </view>
</view>